{
    "name": "permafrost-dev/ray-scan",
    "description": "Find calls to ray() before deploying your code",
    "homepage": "https://github.com/permafrost-dev/ray-scan",
    "license": "MIT",
    "authors": [
        {
            "name": "Patrick Organ",
            "email": "patrick@permafrost.dev",
            "homepage": "https://permafrost.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "permafrost-dev/code-snippets": "^1.0",
        "permafrost-dev/php-code-search": "^1.0",
        "symfony/console": "^5.3",
        "symfony/finder": "^5.3"
    },
    "require-dev": {
        "permafrost-dev/coverage-check": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/phpunit-snapshot-assertions": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "Permafrost\\RayScan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Permafrost\\RayScan\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": "bin/ray-scan",
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/permafrost-dev"
        }
    ]
}
